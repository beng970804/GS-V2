{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-native",
    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "index.js",
    "tailwind.config.js",
    "react-native.config.js"
  ]
}
